<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.yonguk.test.activity.mapiary.SampleChildActivity">

    <include
        android:id="@+id/child_toolbar"
        layout="@layout/app_bar"></include>

    <RelativeLayout
        android:layout_below="@id/child_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="top|center_horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="14sp"
                android:textColor="@color/bb_darkBackgroundColor"/>

            <TextView
                android:id="@+id/tv_subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@+id/tv_title"
                android:textColor="@color/bb_inActiveBottomBarItemColor"
                android:text="Subhead"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv"
            android:layout_below="@id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image3"/>

        <TextView
            android:id="@+id/tv"
            android:layout_below="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/sample_text"/>

        <LinearLayout
            android:layout_below="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="8dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ACTION 1"
                android:background="@color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ACTION 2"
                android:background="@color/white"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
